<%- include('includes/head.ejs') %>

<%- include('includes/navigation.ejs') %>


<!--Registration Form  -->
<% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><%= error %>!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
<% } %>
<div class="container register">
                <div class="row">
                    <div class="col-md-3 register-left">
                        <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
                        <h3>Welcome</h3>
                        <p>You are 30 seconds away from earning your own money!</p>
                        <a href="/login" class="btn">Login</a><br/>
                    </div>
                    <div class="col-md-9 register-right">
                        <div class="tab-content" id="myTabContent">
                            <form action="/create-profile" method="post">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <h3 class="register-heading">Registeration</h3>
                                <div class="row register-form">
        
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="First Name *" name="fname" />
                                        </div>
                                        <div class="form-group">
                                            <input type="email"
                                            name="email"
                                            class="form-control" placeholder="Your Email *" value="" />
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control pass_one" placeholder="Password *" name="pass_one" />
                                        </div>
                                        <div class="form-group">
                                            <div class="maxl">
                                                <label class="radio inline"> 
                                                    <input type="radio" name="gender" value="startup" checked>
                                                    <span> Startup </span> 
                                                </label>
                                                <label class="radio inline"> 
                                                    <input type="radio" name="gender" value="investor">
                                                    <span>Investor</span> 
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Last Name *"
                                            name="lname"/>
                                        </div>
                                        <div class="form-group">
                                            <input type="tel" minlength="10" maxlength="10" name="phoneNumber" class="form-control" placeholder="Your Phone *"/>
                                        </div>
                                        
                                        <div class="form-group">
                                            <input type="password" class="form-control pass_two"  placeholder="Confirm Password *" name="pass_two"/>
                                        </div>
                                    <div>
                                        <input type="submit" class="btnRegister"  value="Register"/>
                                    </div>
                                
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>

            </div>

<%- include('includes/end.ejs') %>