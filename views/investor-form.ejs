    </section>
    <div class="container contact">
        <div class="row">
            <div class="col-md-3">
                <div class="contact-info">
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image"/>
                    <h2>Welcome to the Platform</h2>
                    <h4>Investor Profile Creation!</h4>
                </div>
            </div>
            <div class="col-md-9">
                <div class="contact-form">
                  <form action="/post-investor-profile" method="post">
                    <div class="form-group">
                      <label class="control-label col-sm-2" for="investorname">Full Name:</label>
                      <div class="col-sm-10">          
                        <input type="text" class="form-control" id="investorname" placeholder="Enter your name" name="investor_name">
                      </div>
                    </div>

                    

                      <div class="form-group">
                        <label class="control-label col-sm-3" for="investorprofileurl">LinkedIn Profile:</label>
                        <div class="col-sm-10">          
                          <input type="url" class="form-control" id="investorprofileurl" placeholder="Enter LinkedIN URL" name="investor_profile_url">
                        </div>
                      </div>


                      <div class="form-group">
                        <label class="control-label col-sm-3" for="startupCategory">Select Category:</label>
                        <div class="col-sm-10">          
                            <select class="form-control" id="startupCotegory" name="category">
                                <option value="software">Software</option>
                                <option value="food">Food</option>
                                <option value="property">Property</option>
                                <option value="technology">Technology</option>
                                <option value="restaurant">Restaurant & Bars</option>
                                <option value="retail">Retail</option>
                                <option value="education">Education & Training</option>
                                <option value="medical">Medical & Science</option>
                                <option value="transportation">Transportation</option>
                                <option value="agriculture">Agriculture</option>
                                <option value="media">Media</option>
                                <option value="business services">Business Services</option>
                                <option value="finance">Finance</option>
                                <option value="manufacturing and engineering">Manufacturing & Engineering</option>
                                <option value="">Energy & Electricity</option>
                                <option value="products and Inventions">Products & Inventions</option>
                                <option value="sales and marketing">Sales & Marketing</option>
                                <option value="fashion and beauty">Fashion & Beauty</option>
                                <option value="entertainment">Entertainment</option>
                                <option value="personal services">Personal Services</option>
                              </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-sm-2" for="country">Country:</label>
                        <div class="col-sm-10">          
                          <!-- <input type="text" class="form-control" id="city" placeholder="Enter country Name" name="country"> -->
                          <select class="form-control" id="startupCotegory" name="country">
                            <% if(countries) { %>
                            <% countries.forEach(country => { %>
                            <option value="<%= country.country_name %>"><%= country.country_name %></option>
                            <% }); %>
                            <% } %>
                          </select>
                        </div>
                      </div>
                    <div class="form-group">
                      <label class="control-label col-sm-2" for="city">City:</label>
                      <div class="col-sm-10">          
                        <input list="cities" type="text" class="form-control city" id="city" placeholder="Enter city Name" name="city">
                        <datalist id="cities" class="cities"></datalist>
                      </div>
                    
        
                    </div>

                      <div class="form-group">
                        <label class="control-label col-sm-5" for="maxamount">Maximun investment:</label>
                        <div class="col-sm-10">          
                          <input type="number" class="form-control" id="maxamount" placeholder="Enter the maximum Amount" name="max_amount">
                        </div>
                      </div>

                      
                      <div class="form-group">
                        <label class="control-label col-sm-5" for="minamount">Minimum investment</label>
                        <div class="col-sm-10">          
                          <input type="number" class="form-control" id="minamount" placeholder="Enter the minimum Amount" name="min_amount">
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="control-label col-sm-3" for="areasofexperties">Areas of Experties:</label>
                        <div class="col-sm-10">          
                          <input type="text" class="form-control" id="city" placeholder="eg. tech,Marketing,Science" name="areas_of_experties">
                        </div>
                      </div>


                    <div class="form-group">
                      <label class="control-label col-sm-2" for="email">Email:</label>
                      <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="control-label col-sm-4" for="professionalbg">Professional Background:</label>
                      <div class="col-sm-10">
                        <textarea class="form-control" rows="5" id="professionalbg" name="professional_bg"></textarea>
                      </div>
                    </div>

                    <!-- <div class="form-group">
                        <label class="control-label col-sm-4" for="profilepicture">Upload Profile Picture:</label>
                        <div class="col-sm-10">
                          <input type="file" name="profile-picture" id="profile-picture">
                        </div>
                      </div> -->



                    <div class="form-group">        
                      <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Submit</button>
                      </div>
                    </div>
                  </form>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/js/country.js"></script>
